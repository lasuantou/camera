<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs.statusbar">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cs.statusbar.MainActivity"
            android:theme="@style/status_toolbar_same_color">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cs.statusbar.FullScreenActivity" />
        <activity android:name="com.cs.statusbar.FullScreenWithTextActivity" />
        <activity
            android:name="com.cs.statusbar.SameColorWithTitleBarActivity"
            android:theme="@style/status_toolbar_same_color" />
    </application>

</manifest>